# ==============================================================================
# Semaphore Control Plane - Environment Variables
# ==============================================================================
# Managed by Ansible - semaphore-controller role
# ==============================================================================

# 1Password Service Account Token for secrets management
OP_SERVICE_ACCOUNT_TOKEN="{{ environment_vars.OP_SERVICE_ACCOUNT_TOKEN }}"

# Proxmox API endpoint for Terraform
PROXMOX_VE_ENDPOINT="{{ environment_vars.PROXMOX_VE_ENDPOINT }}"

# Ansible configuration
ANSIBLE_HOST_KEY_CHECKING="{{ environment_vars.ANSIBLE_HOST_KEY_CHECKING }}"
ANSIBLE_COLLECTIONS_PATH="{{ ansible_user_home }}/.ansible/collections"
ANSIBLE_ROLES_PATH="{{ infra_repo_path }}/ansible/roles"
ANSIBLE_INVENTORY="{{ infra_repo_path }}/ansible/inventory/hosts.ini"

# Terraform configuration
TF_DATA_DIR="{{ infra_repo_path }}/terraform/.terraform"
TF_CLI_ARGS="-no-color"
